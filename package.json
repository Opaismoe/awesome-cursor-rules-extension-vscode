{
  "name": "cursor-rules-extension",
  "displayName": "Cursor Rules Manager",
  "description": "Quickly create and manage CursorRules for the Cursor editor",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cursor-rules.create",
    "onCommand:cursor-rules.select",
    "onCommand:cursor-rules.edit"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-rules.create",
        "title": "Cursor Rules: Create New Rule"
      },
      {
        "command": "cursor-rules.select",
        "title": "Cursor Rules: Select from Templates"
      },
      {
        "command": "cursor-rules.edit",
        "title": "Cursor Rules: Edit Existing Rule"
      }
    ],
    "configuration": {
      "title": "Cursor Rules",
      "properties": {
        "cursorRules.templateSources": {
          "type": "array",
          "default": [
            "https://github.com/PatrickJS/awesome-cursorrules"
          ],
          "description": "GitHub repositories to fetch rule templates from"
        },
        "cursorRules.useDirectoryStructure": {
          "type": "boolean",
          "default": true,
          "description": "Use .cursor/rules directory structure instead of .cursorrules file"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "keywords": [
    "cursor",
    "ai",
    "rules",
    "cursorrules"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.11.5",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.60.0",
    "@vscode/test-electron": "^2.3.4",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "sinon": "^15.0.1",
    "typescript": "^5.3.3"
  }
}
